// Calendar Booking System - Prisma Schema
// Supports multi-account Google Calendar integration with composite availability

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// USER & AUTHENTICATION
// ============================================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  timezone      String    @default("America/New_York")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts          Account[]
  sessions          Session[]
  connectedAccounts ConnectedAccount[]
  calendars         Calendar[]
  eventTypes        EventType[]
  bookings          Booking[]
  auditLogs         AuditLog[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================================================
// GOOGLE CALENDAR INTEGRATION
// ============================================================================

// Represents a connected Google account (separate from NextAuth Account)
// This stores encrypted tokens for Calendar API access
model ConnectedAccount {
  id           String   @id @default(cuid())
  userId       String
  email        String   // Google account email
  accessToken  String   @db.Text // Encrypted
  refreshToken String   @db.Text // Encrypted
  expiresAt    DateTime
  scopes       String[] // OAuth scopes granted
  isValid      Boolean  @default(true)
  lastSyncAt   DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  calendars Calendar[]

  @@unique([userId, email])
  @@map("connected_accounts")
}

// Represents a Google Calendar that can be included in availability
model Calendar {
  id                 String   @id @default(cuid())
  userId             String
  connectedAccountId String
  googleCalendarId   String   // The actual Google Calendar ID
  name               String
  description        String?
  color              String?
  timezone           String?
  accessRole         String   // owner, writer, reader, freeBusyReader
  isPrimary          Boolean  @default(false)
  isSelected         Boolean  @default(false) // Included in composite availability
  isWritable         Boolean  @default(false) // Can create events on this calendar
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user             User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  connectedAccount ConnectedAccount @relation(fields: [connectedAccountId], references: [id], onDelete: Cascade)
  eventTypes       EventTypeCalendar[]

  @@unique([connectedAccountId, googleCalendarId])
  @@map("calendars")
}

// ============================================================================
// EVENT TYPES & SCHEDULING CONFIGURATION
// ============================================================================

model EventType {
  id          String   @id @default(cuid())
  userId      String
  slug        String   // URL slug for booking page
  name        String
  description String?  @db.Text
  duration    Int      // Duration in minutes
  color       String?
  isActive    Boolean  @default(true)

  // Location settings
  locationType  LocationType @default(GOOGLE_MEET)
  locationValue String?      // Custom location or Zoom link

  // Scheduling rules
  bufferBefore    Int      @default(0)  // Minutes before meeting
  bufferAfter     Int      @default(0)  // Minutes after meeting
  minimumNotice   Int      @default(240) // Minimum booking notice in minutes (default 4 hours)
  schedulingWindow Int     @default(30)  // Days in advance bookings are allowed
  slotInterval    Int      @default(15)  // Slot interval in minutes

  // Working hours (JSON array of day configurations)
  workingHours Json @default("[{\"day\":1,\"start\":\"09:00\",\"end\":\"17:00\"},{\"day\":2,\"start\":\"09:00\",\"end\":\"17:00\"},{\"day\":3,\"start\":\"09:00\",\"end\":\"17:00\"},{\"day\":4,\"start\":\"09:00\",\"end\":\"17:00\"},{\"day\":5,\"start\":\"09:00\",\"end\":\"17:00\"}]")

  // Booking form configuration
  requiresConfirmation Boolean @default(false)
  collectPhone         Boolean @default(false)
  collectCompany       Boolean @default(false)
  customQuestions      Json?   // Array of custom question objects

  // Advanced settings
  treatTentativeAsBusy Boolean @default(true)
  includeAllDayEvents  Boolean @default(true) // Treat all-day events as busy

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  calendars EventTypeCalendar[]
  bookings  Booking[]

  @@unique([userId, slug])
  @@map("event_types")
}

// Junction table for EventType <-> Calendar (which calendar to write to)
model EventTypeCalendar {
  id           String  @id @default(cuid())
  eventTypeId  String
  calendarId   String
  isDestination Boolean @default(false) // Calendar where event is created

  eventType EventType @relation(fields: [eventTypeId], references: [id], onDelete: Cascade)
  calendar  Calendar  @relation(fields: [calendarId], references: [id], onDelete: Cascade)

  @@unique([eventTypeId, calendarId])
  @@map("event_type_calendars")
}

enum LocationType {
  GOOGLE_MEET
  ZOOM
  PHONE
  IN_PERSON
  CUSTOM
}

// ============================================================================
// BOOKINGS
// ============================================================================

model Booking {
  id             String        @id @default(cuid())
  uid            String        @unique @default(cuid()) // Public-facing ID
  userId         String
  eventTypeId    String
  status         BookingStatus @default(CONFIRMED)

  // Timing
  startTime      DateTime
  endTime        DateTime
  timezone       String        // Booker's timezone

  // Attendee info
  attendeeName   String
  attendeeEmail  String
  attendeePhone  String?
  attendeeCompany String?
  attendeeNotes  String?       @db.Text
  customResponses Json?        // Answers to custom questions

  // Calendar integration
  googleEventId  String?       // ID of created Google Calendar event
  googleCalendarId String?     // Calendar where event was created
  meetingUrl     String?       // Video meeting URL

  // Anti-double-booking
  idempotencyKey String?       @unique

  // Metadata
  cancelledAt    DateTime?
  cancelReason   String?
  rescheduledFrom String?      // UID of original booking if rescheduled

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventType EventType @relation(fields: [eventTypeId], references: [id], onDelete: Cascade)

  // Prevent double-booking with unique constraint on time slot
  @@unique([userId, startTime, endTime, eventTypeId])
  @@index([userId, startTime, endTime])
  @@index([status])
  @@map("bookings")
}

enum BookingStatus {
  PENDING      // Awaiting confirmation (if requiresConfirmation is true)
  CONFIRMED
  CANCELLED
  COMPLETED
}

// ============================================================================
// AUDIT LOGGING
// ============================================================================

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  entity    String
  entityId  String?
  metadata  Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([entity, entityId])
  @@map("audit_logs")
}
